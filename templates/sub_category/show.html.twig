{% extends 'base.html.twig' %}
{% block title %}Détails de la sous-catégorie
{% endblock %}
{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>
<div class="example-wrapper">
	<h2>Détails de la sous-catégorie</h2>
	<a class="btn btn-warning" href="{{ path('subcategory_edit', { 'id': subCategory.id }) }}">Modifier</a>
	<a class="btn btn-danger" href="{{ path('subcategory_delete', { 'id': subCategory.id }) }}">Supprimer</a>
	<h1>{{ subCategory.name }}</h1>
	<p>
		<strong>ID :</strong>
		{{ subCategory.id }}</p>
	<p>
		<strong>Catégorie :</strong>
		{{ subCategory.category.name }}</p>
	<p>
		<strong>Les pieces de cette categorie :</strong>
		{% if pieces is not empty %}
			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">ID Piece</th>
						<th scope="col">Nom de la piece</th>
					</tr>
				</thead>
				<tbody>
						{% for piece in pieces %}
							<tr>
								<td>
									{{ piece.id }}
								</td>
								<td>
									{{ piece.name }}
								</td>
							</tr>
						{% endfor %}
				</tbody>
			</table>
			{% else %}
				Aucune pièce dans cette sous catégorie
		{% endif %}
	</p>
</div>
{% endblock %}